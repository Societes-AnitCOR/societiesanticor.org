{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="container" style="margin-top:100px" >
  <form class="col-md-4 offset-md-4" method="post">
    <div class="text-center mb-4">
      <div class="">
        <img class="mb-4 rounded" style="background-color:#000" src="{{ asset('img/logoSo.png') }}" alt="" >
      </div>

      <h1 class="display-4 mb-3 font-weight-normal">Connexion</h1>
    </div>

    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
      Bonjour {{ app.user.username }}, <a href="{{ path('companyPage') }}">voir le profile de votre entreprise.</a>
    </div>

    {% else %}
    <div class="form-group">
      <label for="inputEmail">Adresse email</label>
      <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    </div>
    <div class="form-group">
      <label for="inputPassword">Mot de passe</label>
      <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>

    <input type="hidden" name="_csrf_token"
    value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-primary " type="submit">Valider</button>
    <p class="mt-5 mb-3 text-center" style="color:#2DB57D;">Vous n'arrivez pas Ã  vous connecter?</p>
    <a class="btn btn-secondary btn-lg " href="{{ path('customer_register')}}">Ouvrir un compte</a>

 <p class="mt-5 mb-3 text-muted text-center">&copy; {{ 'now'| date('Y')}}</p>
    {% endif %}


  </form>
</div>


</div>





{% endblock %}
